@model Web_ban_do_thu_cong_my_nghe.Data.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
    var trangThai = Model.Status ? "Hoạt động" : "Bị khóa";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Thông tin cá nhân</h5>
                    <span class="badge @(Model.Status ? "bg-success" : "bg-danger")">@trangThai</span>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] is string successMessage)
                    {
                        <div class="alert alert-success" role="alert">@successMessage</div>
                    }
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Họ tên</dt>
                        <dd class="col-sm-8">@Model.Fullname</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Địa chỉ</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Ngày sinh</dt>
                        <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "-")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary" asp-controller="KhachHang" asp-action="EditProfile">
                        <i class="fas fa-user-edit me-2"></i>Chỉnh sửa thông tin
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="KhachHang" asp-action="ChangePassword">
                        <i class="fas fa-lock me-2"></i>Đổi mật khẩu
                    </a>
                    <a class="btn btn-outline-danger ms-auto" asp-controller="KhachHang" asp-action="DangXuat">
                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>