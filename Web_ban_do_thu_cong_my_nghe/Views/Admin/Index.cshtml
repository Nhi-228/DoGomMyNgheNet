@model IEnumerable<Web_ban_do_thu_cong_my_nghe.Data.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>Quản lý người dùng</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Đăng Nhập</th>
            <th>Họ Tên (Fullname)</th>
            <th>Email</th>
            <th>Vai trò (Role)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.TenDangNhap</td>
                <td>@user.Fullname</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Role == "Admin")
                    {
                        <strong class="text-danger">@user.Role</strong>
                    }
                    else if (user.Role == "Staff")
                    {
                        <strong class="text-success">@user.Role</strong>
                    }
                    else
                    {
                        @user.Role
                    }
              
                </td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                        Phân quyền
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
