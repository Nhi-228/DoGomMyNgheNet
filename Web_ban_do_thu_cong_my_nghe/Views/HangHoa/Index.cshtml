    <script>
        (function () {
            const toggleButtons = document.querySelectorAll('.js-toggle-sale');
            const saleSection = document.getElementById('saleProducts');

            if (toggleButtons.length === 0 || !saleSection) {
                return;
            }

            const revealSale = () => {
                saleSection.classList.remove('d-none');
                toggleButtons.forEach(btn => {
                    btn.textContent = 'Đang hiển thị giảm giá';
                    btn.setAttribute('disabled', 'disabled');
                });
                saleSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            };

            toggleButtons.forEach(btn => btn.addEventListener('click', revealSale));
        })();
    </script>
}

