<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mỹ Nghệ Việt - Nét Văn Hóa Thuần Việt</title>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
</head>
<body>
   
        <!-- Spinner Start -->
        <div id="spinner"
             class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Topbar Start -->
        <div class="container-fluid px-5 d-none border-bottom d-lg-block">
            <div class="row gx-0 align-items-center">
                <div class="col-lg-4 text-center text-lg-start mb-lg-0">
                    <div class="d-inline-flex align-items-center" style="height: 45px;">
                        
                        <a href="#" class="text-muted mx-2"> Hỗ trợ</a><small> / </small>
                        <a href="#" class="text-muted ms-2"> Liên hệ</a>

                    </div>
                </div>
                <div class="col-lg-4 text-center d-flex align-items-center justify-content-center">
                    <small class="text-dark">Gọi cho chúng tôi: </small>
                    <a href="#" class="text-muted">+843 456 7890</a>
                </div>

                <div class="col-lg-4 text-center text-lg-end">
                    <div class="d-inline-flex align-items-center" style="height: 45px;">
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle text-muted me-2" data-bs-toggle="dropdown">
                                <small>
                                    USD
                                </small>
                            </a>
                            <div class="dropdown-menu rounded">
                                <a href="#" class="dropdown-item"> VND</a>
                                <a href="#" class="dropdown-item"> Dolar</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle text-muted mx-2" data-bs-toggle="dropdown">
                                <small>
                                    English
                                </small>
                            </a>
                            <div class="dropdown-menu rounded">
                                <a href="#" class="dropdown-item"> English</a>
                                <a href="#" class="dropdown-item"> VietNam</a>
                                <a href="#" class="dropdown-item"> Spanol</a>
                                <a href="#" class="dropdown-item"> Italiano</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle text-muted ms-2" data-bs-toggle="dropdown">
                                <small>
                                    <i class="fa fa-home me-2"></i> Cài đặt
                                </small>
                            </a>
                            <div class="dropdown-menu rounded">
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="overview" class="dropdown-item">Tài khoản của tôi</a>
                                    <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="favorites" class="dropdown-item">Danh sách yêu thích</a>
                                    <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="notifications" class="dropdown-item">Thông báo</a>
                                    <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="settings" class="dropdown-item">Cài đặt tài khoản</a>
                                    <a asp-controller="KhachHang" asp-action="DangXuat" class="dropdown-item">Đăng xuất</a>
                                }
                                else
                                {
                                    <a asp-controller="KhachHang" asp-action="DangNhap" class="dropdown-item">Đăng nhập</a>
                                    <a asp-controller="KhachHang" asp-action="DangKy" class="dropdown-item">Đăng ký</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid px-5 py-4 d-none d-lg-block">
            <div class="row gx-0 align-items-center text-center">

                <div class="col-md-4 col-lg-3 text-center text-lg-start">
                    <div class="d-inline-flex align-items-center">
                        <a href="" class="navbar-brand p-0">
                            <h1 class="display-5 text-primary m-0">
                                <i class="fas fa-shopping-bag text-secondary me-2"></i>Mỹ Nghệ Việt
                            </h1>
                        </a>
                    </div>
                </div>

                <div class="col-md-4 col-lg-6 text-center">

                    <form asp-controller="HangHoa" asp-action="Search" method="get" class="d-flex border rounded-pill">
                        <input name="query" class="form-control border-0 rounded-pill w-100 py-3" type="text" placeholder="Tìm Kiếm">
                        <select name="categoryId" class="form-select text-dark border-0 border-start rounded-0 p-3" style="width: 300px;">
                            <option value="">Tất cả danh mục </option>
                            <option value="1">Gốm Sứ</option>
                            <option value="2">Quà Tặng</option>
                            <option value="3">Bộ Bàn Ăn</option>
                            <option value="4">Tranh Sơn Mài</option>
                        </select>
                    
                        <button type="submit" class="btn btn-primary rounded-pill py-3 px-5" style="border: 0;">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>

                </div>

                <div class="col-md-4 col-lg-3 text-center text-lg-end">
                    <div class="d-inline-flex align-items-center">
                        <a href="#" class="text-muted d-flex align-items-center justify-content-center me-3">
                            <span class="rounded-circle btn-md-square border"><i class="fas fa-random"></i></span>
                        </a>
                        <a href="#" class="text-muted d-flex align-items-center justify-content-center me-3">
                            <span class="rounded-circle btn-md-square border"><i class="fas fa-heart"></i></span>
                        </a>
                        @await Component.InvokeAsync("Cart")
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        // --- KHI NGƯỜI DÙNG ĐÃ ĐĂNG NHẬP ---

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-user fa-2x"></i>
                            </a>

                            <div class="dropdown-menu dropdown-menu-end m-0 bg-secondary rounded-0">

                                <h6 class="dropdown-header">Chào, @User.Identity.Name</h6>

                                <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="overview" class="dropdown-item">
                                    Tài khoản của tôi
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Admin" asp-action="Index" class="dropdown-item">
                                        Quản lý User
                                    </a>
                                }
                                @if (User.IsInRole("Staff"))
                                {
                                    <a asp-controller="Staff" asp-action="Index" class="dropdown-item">
                                        Quản lý Khách hàng
                                    </a>
                                }
                                @if (User.IsInRole("Customer"))
                                {
                                    <a asp-controller="KhachHang" asp-action="Profile" class="dropdown-item">
                                        Thông tin cá nhân
                                    </a>
                                    <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="favorites" class="dropdown-item">
                                        Danh sách yêu thích
                                    </a>
                                    <a asp-controller="KhachHang" asp-action="Account" asp-route-tab="notifications" class="dropdown-item">
                                        Thông báo
                                    </a>
                                    
                                }
                                @if (User.IsInRole("Customer"))
                                {
                                    <a asp-controller="KhachHang" asp-action="LichSuDonHang" class="dropdown-item">
                                        Lịch sử đơn hàng
                                    </a>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Admin" asp-action="LichSuDonHang" class="dropdown-item">
                                        Lịch sử đơn hàng
                                    </a>
                                }

                                <a asp-controller="KhachHang" asp-action="DangXuat" class="dropdown-item">
                                    Đăng xuất
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        // --- KHI NGƯỜI DÙNG CHƯA ĐĂNG NHẬP ---

                        <a asp-controller="KhachHang" asp-action="DangNhap" class="nav-item nav-link" title="Đăng nhập">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                    }
						
                        
                    </div>
                </div>

            </div>
        </div>
        <!-- Topbar End -->
        <!-- Navbar & Hero Start -->
        <div class="container-fluid nav-bar p-0">
            <div class="row gx-0 bg-primary px-5 align-items-center">
                <div class="col-lg-3 d-none d-lg-block">
                    <nav class="navbar navbar-light position-relative" style="width: 250px;">
                        <button class="navbar-toggler border-0 fs-4 w-100 px-0 text-start" type="button"
                                data-bs-toggle="collapse" data-bs-target="#allCat">
                            <h4 class="m-0"><i class="fa fa-bars me-2"></i> </h4>
                        </button>
                        <div class="collapse navbar-collapse rounded-bottom" id="allCat">
                            <div class="navbar-nav ms-auto py-0">
                                <ul class="list-unstyled categories-bars">
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Gốm sứ Bát Tràng</a>
                                            <span>(3)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="Thư pháp Việt Nam">
                                            <a href="#"></a>
                                            <span>(5)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Qùa tốt nghiệp</a>
                                            <span>(2)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Bộ bàn ăn</a>
                                            <span>(8)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="categories-bars-item">
                                            <a href="#">Tranh sơn mài</a>
                                            <span>(5)</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="col-12 col-lg-9">
                    <nav class="navbar navbar-expand-lg navbar-light bg-primary ">
                        <a href="" class="navbar-brand d-block d-lg-none">
                            <h1 class="display-5 text-secondary m-0">
                                <i class="fas fa-shopping-bag text-white me-2"></i>Electro
                            </h1>
                            <!-- <img src="img/logo.png" alt="Logo"> -->
                        </a>
                        <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarCollapse">
                            <span class="fa fa-bars fa-1x"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <div class="navbar-nav ms-auto py-0">
                            <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link">Trang chủ</a>
                                <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link">Shop</a>
                                <a asp-controller="HangHoa" asp-action="BestSeller" class="nav-item nav-link">Bán chạy</a>

                            <a asp-controller="KhachHang" asp-action="DangKy" class="nav-item nav-link">Đăng Ký</a>

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                                    <div class="dropdown-menu m-0">
                                        <a asp-controller="HangHoa" asp-action="BestSeller" class="dropdown-item">Bán chạy</a>
                                    <a asp-controller="Cart" class="dropdown-item">Giỏ hàng</a>

                                        <a asp-controller="Cart" asp-action="Checkout" class="dropdown-item">Thanh toán</a>
                                        
                                    </div>
                                </div>
                                <a href="contact.html" class="nav-item nav-link me-2">Liên hệ</a>
                                <div class="nav-item dropdown d-block d-lg-none mb-3">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">All Category</a>
                                    <div class="dropdown-menu m-0">
                                        <ul class="list-unstyled categories-bars">
                                            <li>
                                                <div class="categories-bars-item">
                                                    <a href="#">Gốm sứ Bát Tràng</a>
                                                    <span>(3)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="categories-bars-item">
                                                    <a href="#">Thư pháp Việt Nam</a>
                                                    <span>(5)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="categories-bars-item">
                                                    <a href="#">Qùa tốt nghiệp</a>
                                                    <span>(2)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="categories-bars-item">
                                                    <a href="#">Bộ bàn ăn</a>
                                                    <span>(8)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="categories-bars-item">
                                                    <a href="#">Tranh sơn mài</a>
                                                    <span>(5)</span>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <a href="" class="btn btn-secondary rounded-pill py-2 px-4 px-lg-3 mb-3 mb-md-3 mb-lg-0">
                                <i class="fa fa-mobile-alt me-2"></i> +843 456 7890
                            </a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Navbar & Hero End -->
        <div style="min-height:400px;">
            @RenderBody()
        </div>
       
        


        @await Html.PartialAsync("_Footer")
    @RenderSection("Scripts", required: false)
 
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>
</html>
